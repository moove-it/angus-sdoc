body {
  font-family: Arial;
  font-size: 11pt;
  background-color: #D0D0D0;
}

h1 {
  text-align: center;
  font-size: 24pt;
  font-weight: bold;
}

h3 {
  font-size: 14pt;
  font-weight: bold;
}

h4 {
  font-size: 12pt;
  font-weight: bold;
}

h5 {
  font-size: 11pt;
  font-weight: bold;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
  width: 50em;
}

thead {
  background-color: #EFEFEF;
  font-size: 10pt;
  font-weight: bold;
}

tbody {
  font-size: 11pt;
}

td {
  border: solid 1px #000000;
  margin: 0;
  padding: 4pt 6pt;
}

body > .content {
  margin: 20px 10px;
  border: solid 1px #909090;
  padding: 10px 10px;
  background-color: #FFFFFF;
  margin-right: auto;
  margin-left: auto;
  width: 80em;
}

.operation, .representation {
  border-bottom: solid 1px #909090;
  padding-bottom: 4ex;
}

table.vertical-header td:first-child {
  background-color: #EFEFEF;
  font-size: 10pt;
  font-weight: bold;
}

table.split td:first-child {
  width: 40%;
}
